#!/usr/bin/env bash
# This script installs and configures Nginx to listen on port 80

# Update package list and install Nginx if not already installed
sudo apt update
sudo apt install -y nginx

# Ensure Nginx is configured to listen on port 80 for both IPv4 and IPv6
sudo sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default

# Check if UFW is installed, install if necessary, and allow Nginx through the firewall
sudo apt install -y ufw
sudo ufw allow 'Nginx Full'

# Enable UFW if not already enabled
sudo ufw enable

# Restart Nginx to apply changes
sudo systemctl restart nginx

echo "Nginx is installed and configured to listen on port 80."
